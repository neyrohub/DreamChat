  MenuItem := TMenuItem.Create(Self);
  MenuItem.Caption := 'Это меню для';
  Self.Items.Add(MenuItem);
  MenuItem := TMenuItem.Create(Self);
  MenuItem.Caption := 'TChatView';
  Self.Items.Add(MenuItem);
  end;
end;}

